#!/bin/bash
BUILD_DIR=$1
TESSERACT_OCR_LOCAL_VERSION=3.03

TESSERACT_OCR_LOCAL=tesseract-ocr-$TESSERACT_OCR_LOCAL_VERSION.tar.gz
#TESSERACT_OCR_REMOTE=https://dl.dropboxusercontent.com/u/44286028/tesseract/tesseract-ocr-3.04.00.tar.gz
#TESSERACT_OCR_REMOTE=https://github.com/tesseract-ocr/tesseract/archive/3.04.00.tar.gz
TESSERACT_OCR_REMOTE=http://http.debian.net/debian/pool/main/t/tesseract/tesseract_3.04.00.orig.tar.gz


INSTALL_DIR=$BUILD_DIR/vendor/tesseract-ocr/
INSTALL_DIR_TRAINING_DATA=$BUILD_DIR/vendor/
TESSERACT_OCR_DIR=${HOME}/vendor/tesseract-ocr
ENVSCRIPT=$BUILD_DIR/.profile.d/tesseract-ocr.sh

TESSERACT_OCR_LANGUAGES=swe,eng

echo "Unpacking Tesseract-OCR binaries"
mkdir -p $INSTALL_DIR
tar -zxvf $TESSERACT_OCR_LOCAL -C $INSTALL_DIR

#echo "Getting Tesseract-ocr Binaries from $TESSERACT_OCR_REMOTE..."
#mkdir -p $INSTALL_DIR
#curl $TESSERACT_OCR_REMOTE -o - | tar -xz -C $INSTALL_DIR -f -

if [ $TESSERACT_OCR_LANGUAGES ]
then
   array=(${TESSERACT_OCR_LANGUAGES//,/ })
   for i in "${!array[@]}"
   do
     lang="${array[i]}"
     echo $lang 'training data'
     curl https://dl.dropboxusercontent.com/u/44286028/tesseract/tesseract-ocr-3.04.$lang.tar.gz \
  -o - | tar -xz -C $INSTALL_DIR_TRAINING_DATA -f -

   done
fi

echo "Building runtime environment for Tesseract-OCR"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\"$TESSERACT_OCR_DIR/bin:\$PATH\"" > $ENVSCRIPT
echo "export LD_LIBRARY_PATH=\"$TESSERACT_OCR_DIR/lib:\$LD_LIBRARY_PATH\"" >> $ENVSCRIPT
echo "export TESSDATA_PREFIX=\"$TESSERACT_OCR_DIR/\"" >> $ENVSCRIPT
